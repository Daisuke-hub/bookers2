
<head>
    <link rel="stylesheet" href="application.scss">
    <%# <script src="https://kit.fontawesome.com/0141f0daaa.js" crossorigin="anonymous"></script> %>
</head>

<body>
    <div style="background-color: #222;">
        <div class="container">
            <div class="row" style="height: 50px">
                <div class="col-lg-12">
                    <div class="pull-left nav navbar-nav navbar-left" style="font-size: 20px; color: white;">
                        <div>Bookers</div>
                    </div>
                    <% if user_signed_in? %>
                        <ul class="list-inline navbar-right h5 list-unstyled" style="list-style-type: none;">
                            <li>
                                <a class="glyphicon glyphicon-home" aria-hidden="true" href="<%= user_path(current_user) %>"> Home</a>
                            </li>
                            <li>
                                <a href="<%= users_path %>" class="glyphicon glyphicon-user" aria-hidden="true"> Users</a>
                            </li>
                            <li>
                                <a href="<%= books_path %>" class="glyphicon glyphicon-book" aria-hidden="true"> Books</a>
                            </li>
                            <li>
                                <a href="<%= destroy_user_session_path %>" data-method="delete" class="glyphicon glyphicon-log-out" aria-hidden="true"> logout</a>
                            </li>
                        </ul>
                    <% else %>
                        <ul class="list-inline navbar-right h5 list-unstyled" style="list-style-type: none;">
                            <li>
                                <a class="glyphicon glyphicon-home" aria-hidden="true" href="<%= root_path %>"> Home</a>
                            </li>
                            <li>
                                <a href="<%= home_about_path %>" class="glyphicon glyphicon-link" aria-hidden="true"> About</a>
                            </li>
                            <li>
                                <a href="<%= new_user_registration_path %>" class="glyphicon glyphicon-edit" aria-hidden="true"> Sign up</a>
                            </li>
                            <li>
                                <a href="<%= new_user_session_path %>" class="glyphicon glyphicon-log-in" aria-hidden="true"> login</a>
                            </li>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="text-success"><%= render :partial => "layouts/flash"%></div>
        </div>
    </div>
</body>