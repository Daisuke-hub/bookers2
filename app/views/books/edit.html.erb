<%= render :partial => "layouts/header"%>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <%= form_for(@book) do |f| %>
                <% if @book.errors.any? %>
                    <h3 style="color: red;"><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
                    <ul><% @book.errors.full_messages.each do |message| %></ul>
                        <li style="color: red"><%= message %></li>
                    <% end %>
                <% end %>
            <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h1>Editing Book</h1>
            <%= form_for(@book) do |f| %>
                <p><%= f.text_field :title %></p>
                <p><%= f.text_area :body %></p>
                <p><%= f.submit "Update Book"%></p>
            <% end %>
            <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
        </div>
    </div>
</div>

