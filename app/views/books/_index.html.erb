<h1>Books</h1>
<table class="table table-hover">
    <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td>
                <%= link_to user_path(book.user) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback:"no_image.jpg", size:"30x30" %>
                <% end %>
            </td>
            <td>
                <%= link_to book_path(book) do %>
                    <%= book.title %>
                <% end %>
            </td>
            
            <td><%= book.body %></td>
        </tr>
    <% end %>
</table>