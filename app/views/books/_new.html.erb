<section class="books_new">
    <div>
        <div class="headline">
            <h1>New book</h1>
        </div>
    </div>


    <div>
        <%= form_for(@book) do |f| %>
            <div class="h5 dt"><dt>Title</dt></div>
            <div class="field">
                <%= f.text_field :title %><br>
            </div>
            <div class="h5 "><dt>Opinion</dt></div>
            <div class="area">
                <%= f.text_area :body %><br>
            </div>
            <%= f.submit("Create Book", class:"btn btn-primary btn-block") %>
        <% end %>
    </div>
</section>

