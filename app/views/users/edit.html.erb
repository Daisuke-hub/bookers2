<%= render :partial => "layouts/header"%>

<div class="container">
  <div class="row">
    <div class="col-lg-12">

        <h2>User info</h2>
        <%= form_for(@user) do |f| %>
            <% if @user.errors.any? %>
                <h3 style="color: red;"><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
                <ul><% @user.errors.full_messages.each do |message| %></ul>
                    <li style="color: red"><%= message %></li>
                <% end %>
            <% end %>
            <h4>Name</h4>
            <%= f.text_field :name %>
            <h4>Image</h4>
            <%= f.attachment_field :profile_image %>
            <h4>Introduction</h4>
            <%= f.text_area :introduction %>
            <div><%= f.submit "Update User" %></div>
        <% end %>

    </div>
  </div>
</div>